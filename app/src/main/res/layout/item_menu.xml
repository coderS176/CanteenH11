<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageMenuItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/maggie"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maggie"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Price: $10" />

        <TextView
            android:id="@+id/textViewItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Delicious Maggie noodles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAddToCart"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />

            <Button
                android:id="@+id/buttonDecreaseQuantity"
                android:layout_width="61dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contextClickable="false"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textDirection="locale"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonIncreaseQuantity"
                android:layout_width="73dp"
                android:layout_height="33dp"
                android:text="+" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
