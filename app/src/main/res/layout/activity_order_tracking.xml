<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/chefcooking">


    <!-- Heading: H11 Night Canteen -->

    <!-- Your Order Status Heading -->
    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="#EACACA"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:text="H11 Night Canteen"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- CardView to wrap the content -->

    <TextView
        android:id="@+id/textViewOrderStatusHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeading"
        android:layout_marginTop="437dp"
        android:layout_marginBottom="12dp"
        android:background="#EACACA"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:text="Your Order Status"
        android:textSize="24dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/textViewOrderStatusHeading"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#EACACA"
        android:elevation="8dp"
        android:padding="20dp"
        app:cardBackgroundColor="#EACACA">

        <!-- Order Status TextView -->
        <TextView
            android:id="@+id/textViewOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewOrderStatusHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="In Progress"
            android:textSize="22dp"
            android:textStyle="bold" />

        <!-- Estimated Finish Time TextView -->
        <TextView
            android:id="@+id/textViewEstimatedFinishTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewOrderStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="Estimated Finish Time: 00Hrs:00Minutes"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Timer TextView -->
        <TextView
            android:id="@+id/textViewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewEstimatedFinishTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="Get Your Order In:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:gravity="center"
            android:text="00:00 Min"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>
